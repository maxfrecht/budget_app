{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <div class="container" style="min-height: 100vh; display: flex; align-items: center">
        <div class="form-box glass">
            <h1 class="title">Cr√©er un compte</h1>
            {{ form_start(registrationForm,
            ) }}
            <div class="form-group">
                {{ form_widget(registrationForm.email, {
                    'attr':{'placeholder':'email'}
                }) }}
                {{ form_label(registrationForm.email, 'E-mail') }}
            </div>
            <div class="form-group">
                {{ form_widget(registrationForm.plainPassword, {
                    'attr':{'placeholder':'plainPassword'}
                }) }}
                {{ form_label(registrationForm.email, 'E-mail') }}
            </div>
            {{ form_row(registrationForm.agreeTerms,
                {label: "J'accepte les CGU"}
            ) }}
            <button type="submit" class="btn">S'inscrire</button>
            {{ form_end(registrationForm) }}</div>
    </div>
{% endblock %}